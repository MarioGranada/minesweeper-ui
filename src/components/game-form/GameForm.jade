.row.start-xs.col-xs-12.game-form-container
	.col-xs-12.text-field
		input(v-model = 'rows', 
			placeholder = 'Rows',
			id = 'rows',
			name = 'rows'
			type = 'number')
	.col-xs-12.text-field
		input(v-model = 'cols', 
			placeholder = 'Columns',
			id = 'cols',
			name = 'cols'
			type = 'number')
	.col-xs-12.text-field
		input(v-model = 'mines', 
			placeholder = 'Number of mines',
			id = 'mines',
			name = 'mines'
			type = 'number')
	.row.col-xs-12
		.col-xs-4
			button.create-game-button(@click='createGame()') Create Game
		.col-xs-4
			button(@click = 'closeForm()') Cancel
